<div class="media text-muted pt-3">
  <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
    <%= link_to user_path(tweet.user), method: :get do %>
      <% if tweet.user.avatar? %>
        <%= image_tag tweet.user.avatar_url, class: 'rounded-circle', size: '50x50' %>
      <% else %>
        <%= image_pack_tag 'default.jpg', class: 'rounded-circle', size: '50x50' %>
      <% end %>
    <% end %>  
      <strong class="d-block text-gray-dark"><%= tweet.user.username %></strong>    
      <%= link_to tweet.body, tweet_path(tweet.id)%>
      <%= image_tag tweet.tweet_image.url, class: 'mr-2 rounded', alt: '' if tweet.tweet_image? %>
      <i class="fas fa-calendar"></i>
      投稿日時:<%= l tweet.created_at, format: :long %>
      <% if current_user.own?(tweet) %>
        <%= render 'crud_menus', tweet: tweet %>  
      <% end %>
      <%= render 'shared/bookmark_button', tweet: tweet %>
      <% if tweet.bookmarks.count != 0 %>
        <%= tweet.bookmarks.count %>
      <% end %>      
  </p>
</div>  
   
