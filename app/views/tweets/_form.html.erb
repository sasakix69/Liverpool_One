<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <%= form_with model: tweet do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', rows: 10 %>
        </div>
        <div class="form-group">
          <%= f.label :tweet_image %>
          <%= f.file_field :tweet_image, onchange: 'previewFileWithId(preview)', class: 'form-control mb-3', accept: 'image/*' %>
          <%= f.hidden_field :tweet_image_cache %>
        </div>
        <div class='mt-3 mb-3'>
          <%= image_tag tweet.tweet_image.url, class: 'tweet-img', id: 'preview' if tweet.tweet_image? %>
        </div>

        <%= f.submit t('tweets.new.register_tweet'), class: 'btn btn-primary' %>  
      <% end %>
    </div>
  </div>
</div>      