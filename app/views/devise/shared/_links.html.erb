<hr class="border-dark my-5">
<div class="d-grid gap-3">
  <%- if controller_name != 'sessions' %>
      <%= link_to t(".log_in"), new_session_path(resource_name), class: 'btn btn-info' %>
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to t(".sign_up"), new_registration_path(resource_name), class: 'btn btn-info' %>
  <% end -%>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t(".forgot_your_password"), new_password_path(resource_name), class: 'btn btn-secondary' %>
  <% end -%>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t('.didn_t_receive_confirmation_instructions'), new_confirmation_path(resource_name), class: 'btn btn-secondary' %>
  <% end -%>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t('.didn_t_receive_unlock_instructions'), new_unlock_path(resource_name), class: 'btn btn-secondary' %>
  <% end -%>
  
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: 'btn btn-info', method: :post do %>
        <i class="fab fa-twitter text-white"></i>
        <i class="text-white">
          <%= t('.sign_in_with_provider', provider: OmniAuth::Utils.camelize(provider)) %>
        </i>
      <% end -%>  
    <% end -%>
  <% end -%>
</div>