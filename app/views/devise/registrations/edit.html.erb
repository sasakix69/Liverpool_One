<h1><%= t('.title') %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group">
    <%= f.label :avatar %>
    <% if @user.avatar? %>
      <%= image_tag @user.avatar.thumb.url, size: "200", class: 'user-icon', id: 'img_prev' %>
    <% else %>
      <%= image_pack_tag 'default.jpg', alt: "user-icon", size: "200", class: "user-icon", id: 'img_prev' %>
    <% end %>
    <%= f.file_field :avatar, class: 'form-control', id: :preview, accept: 'image/*' %>
    <%= f.hidden_field :avatar_cache, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div></br>

  <div class="form-group">
    <%= f.label :kop_history %>
    <%= f.number_field :kop_history %> 年
  </div>

  <div class="form-group">
    <%= f.label :favorite_player %>
    <%= f.text_field :favorite_player, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :new_password %>
    <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', placeholder: '新しいパスワード' %>

    <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
  </div>

  <div class="form-group">
    <%= f.label :new_password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control', placeholder: '新しいパスワード確認用'  %>
  </div></br>

  <div class="form-group">
    <%= f.submit t('.update'), class: 'btn btn-primary w-100' %>
  </div>
<% end %>

<hr class="devise-link my-5">
  <div class="form-group">
    <%# リンク先URLはツイートページへのパス %>
    <%= link_to t('.back'), user_path(id: current_user.id), class: 'btn btn-info w-100 mb-4' %>
  </div>

  <div class="form-group">
    <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: {confirm: t('.are_you_sure')}, method: :delete, class: 'btn btn-danger w-100' %>
  </div>