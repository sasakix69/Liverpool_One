<h1>Users#show</h1>
<p><%= User.human_attribute_name(:username) %> : <%= @user.username %></p>
<p><%= User.human_attribute_name(:email) %> : <%= @user.email %></p>
<% if @user.image? %>
  <%= image_tag @user.image.thumb.url, class: "user-icon" %>
<% else %>
  <%= image_pack_tag 'default.jpg', alt: "user-icon", size: "200", class: "user-icon" %>
<% end %>
