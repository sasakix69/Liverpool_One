<main role="main" class="container">

  <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded shadow-sm">
    <% if @user.image? %>
      <%= image_tag @user.image.thumb.url, class: 'user-icon mr-3', alt: "", size: '140' %>
    <% else %>
      <%= image_pack_tag 'default.jpg', alt: "user-icon", class: "mr-3", size: '140' %>
    <% end %>
    <div class="d-flex justify-content-between align-items-center w-100 lh-100">
      <h6 class="mb-0 text-black lh-100"><%= @user.username %></h6>
      <%= link_to '編集', edit_user_registration_path %>
